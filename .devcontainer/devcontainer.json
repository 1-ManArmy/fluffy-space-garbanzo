{
  "name": "onelastaighost-env",
  "image": "mcr.microsoft.com/devcontainers/ruby:3",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "bundle install",
  "postCreateCommand": "pip install -r requirements.txt && python manage.py migrate && python manage.py collectstatic --noinput",
  "postAttachCommand": {
    "server": "rails server"
  },
  "settings": {
    "python.pythonPath": "/usr/local/bin/python",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "app/views/hello/index.html.erb"
      ]
    },
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "docker.docker",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "esbenp.prettier-vscode",
        "github.copilot"
      ]
    }
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-toolsai.jupyter",
    "esbenp.prettier-vscode",
    "github.copilot"
  ],
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [3000],
  "remoteUser": "vscode"
}
