      line-height: 1.6;
    }

    .classified-section {
      background: rgba(0, 0, 0, 0.3);
      border: 2px solid #ffaa00;
      border-radius: 20px;
      padding: 2rem;
      margin: 2rem 0;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .classified-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 170, 0, 0.1), transparent);
      animation: scan 3s infinite;
    }

    @keyframes scan {
      0% { left: -100%; }
      100% { left: 100%; }
    }

    .back-button {
      display: inline-block;
      background: linear-gradient(45deg, #666, #888);
      color: #ffffff;
      padding: 1rem 2rem;
      border-radius: 12px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
      margin-top: 2rem;
    }

    .back-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(136, 136, 136, 0.4);
    }

    @media (max-width: 768px) {
      .hero-title {
        font-size: 2.5rem;
      }
      
      .features-grid {
        grid-template-columns: 1fr;
      }
      
      .update-card {
        padding: 2rem;
      }
    }
  </style>
</head>

