  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', 'Roboto', 'Arial', sans-serif;
      background: linear-gradient(135deg, #1a0a0a 0%, #2a1a1a 50%, #3a1a1a 100%);
      color: #ffffff;
      min-height: 100vh;
      overflow-x: hidden;
    }

    .hero-section {
      padding: 4rem 2rem 3rem;
      text-align: center;
      background: radial-gradient(ellipse at center, rgba(255, 0, 0, 0.15) 0%, rgba(0, 0, 0, 0.3) 70%);
      border-bottom: 2px solid #ff4444;
    }

    .hero-title {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      text-shadow: 0 0 20px #ff4444;
      background: linear-gradient(45deg, #ff4444, #cc0000, #ff6666);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
      text-shadow: 0 0 30px #ff4444;
    }

    .hero-tagline {
      font-size: 1.5rem;
      color: #e0e0e0;
      margin-bottom: 1rem;
      font-weight: 300;
    }

    .launch-badge {
      background: linear-gradient(45deg, #ff6b6b, #ff5722);
      color: #fff;
      padding: 0.8rem 2rem;
      border-radius: 25px;
      font-size: 1.1rem;
      font-weight: 600;
      display: inline-block;
      margin-bottom: 2rem;
      animation: pulse 2s infinite;
    }

    .classified-badge {
      background: linear-gradient(45deg, #ffaa00, #ff8800);
      color: #000;
      padding: 0.8rem 2rem;
      border-radius: 25px;
      font-size: 1.1rem;
      font-weight: 600;
      display: inline-block;
      margin-bottom: 1rem;
      animation: blink 1s infinite;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }

    @keyframes blink {
      0%, 50% { opacity: 1; }
      51%, 100% { opacity: 0.7; }
    }

    .content-section {
      padding: 3rem 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }

    .update-card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 68, 68, 0.2);
      border-radius: 20px;
      padding: 3rem;
      margin-bottom: 2rem;
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
    }

    .update-card:hover {
      border-color: #ff4444;
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(255, 68, 68, 0.2);
    }

    .card-title {
      font-size: 2.2rem;
      color: #ff4444;
      margin-bottom: 1.5rem;
      text-align: center;
    }

    .card-content {
      color: #e0e0e0;
      line-height: 1.8;
      font-size: 1.1rem;
      text-align: center;
      margin-bottom: 2rem;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .feature-card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 68, 68, 0.1);
      border-radius: 15px;
      padding: 2rem;
      text-align: center;
      transition: all 0.3s ease;
    }

    .feature-card:hover {
      border-color: #ff4444;
      background: rgba(255, 68, 68, 0.1);
    }

    .feature-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      text-shadow: 0 0 15px #ff4444;
    }

    .feature-title {
      font-size: 1.3rem;
      color: #ff4444;
      margin-bottom: 1rem;
      font-weight: 600;
    }

    .feature-description {
      color: #e0e0e0;
      line-height: 1.6;
      font-size: 0.95rem;
    }

    .timeline {
      position: relative;
      padding: 2rem 0;
    }

    .timeline-item {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 68, 68, 0.2);
      border-radius: 15px;
      padding: 2rem;
      margin-bottom: 2rem;
      position: relative;
    }

    .timeline-date {
      color: #ffaa00;
      font-weight: 600;
      font-size: 1.1rem;
      margin-bottom: 1rem;
    }

    .timeline-title {
      color: #ff4444;
      font-size: 1.4rem;
      margin-bottom: 1rem;
      font-weight: 600;
    }

    .timeline-description {
