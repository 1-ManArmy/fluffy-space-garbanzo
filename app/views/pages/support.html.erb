          <button class="contact-button" onclick="openTicketForm()">Create Ticket</button>
          <div class="status-indicator">
            <span class="status-dot"></span>
            <span>Priority support available</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Knowledge Base Section -->
  <section class="section" id="knowledge">
    <div class="container">
      <h2 class="section-title">üåå Knowledge Base</h2>
      <div class="knowledge-grid">
        <div class="knowledge-item" onclick="window.location='/docs/getting-started'">
          <div class="knowledge-icon">üöÄ</div>
          <h3 class="knowledge-title">Getting Started Guide</h3>
          <p class="knowledge-description">Complete guide to setting up and using OneLastAI</p>
        </div>

        <div class="knowledge-item" onclick="window.location='/docs/api'">
          <div class="knowledge-icon">üîå</div>
          <h3 class="knowledge-title">API Documentation</h3>
          <p class="knowledge-description">Comprehensive API reference and integration guides</p>
        </div>

        <div class="knowledge-item" onclick="window.location='/docs/agents'">
          <div class="knowledge-icon">ü§ñ</div>
          <h3 class="knowledge-title">AI Agent Guides</h3>
          <p class="knowledge-description">Detailed documentation for each AI agent</p>
        </div>

        <div class="knowledge-item" onclick="window.location='/docs/tutorials'">
          <div class="knowledge-icon">üìñ</div>
          <h3 class="knowledge-title">Tutorials</h3>
          <p class="knowledge-description">Step-by-step tutorials and use case examples</p>
        </div>

        <div class="knowledge-item" onclick="window.location='/docs/troubleshooting'">
          <div class="knowledge-icon">üîß</div>
          <h3 class="knowledge-title">Troubleshooting</h3>
          <p class="knowledge-description">Common issues and their solutions</p>
        </div>

        <div class="knowledge-item" onclick="window.location='/docs/best-practices'">
          <div class="knowledge-icon">üí°</div>
