<!-- Final CTA + Newsletter Signup Section -->
<section class="newsletter-section relative py-20 overflow-hidden">
  <!-- Seamless Border Transition from Press Section -->
  <div class="newsletter-border-top absolute top-0 left-0 right-0 h-16"></div>
  
  <!-- Enhanced Background with Color Merging -->
  <div class="newsletter-bg-layers absolute inset-0">
    <div class="press-section-transition-layer"></div>
    <div class="newsletter-primary-fog fog-layer-newsletter-1"></div>
    <div class="newsletter-secondary-fog fog-layer-newsletter-2"></div>
    <div class="newsletter-depth-fog fog-layer-newsletter-3"></div>
  </div>
  
  <!-- Multi-Color Gradient Background for Seamless Transition -->
  <div class="absolute inset-0 bg-gradient-to-br from-purple-900/50 via-blue-900/40 via-indigo-900/30 to-slate-900/60"></div>
  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/40"></div>
  <div class="absolute inset-0 bg-gradient-radial from-purple-600/15 via-blue-600/10 to-transparent"></div>
  
  <!-- Floating Newsletter Particles -->
  <div class="newsletter-particles absolute inset-0 pointer-events-none">
    <div class="newsletter-particle particle-glow-1"></div>
    <div class="newsletter-particle particle-glow-2"></div>
    <div class="newsletter-particle particle-glow-3"></div>
    <div class="newsletter-particle particle-glow-4"></div>
    <div class="newsletter-particle particle-glow-5"></div>
  </div>
  
  <div class="fog-layer fog-layer-16"></div>
  <div class="spectral-orb spectral-orb-15"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="newsletter-crystal-container text-center max-w-4xl mx-auto">
      <div class="newsletter-gradient-bg"></div>
      <h2 class="newsletter-title text-4xl lg:text-5xl font-bold mb-6 crystal-gradient">Stay Connected</h2>
      <p class="newsletter-subtitle text-xl text-gray-300 mb-12">
        Subscribe for the latest updates, AI insights, and exclusive offers from the shadows
      </p>
      
      <div class="newsletter-form" data-controller="newsletter" data-newsletter-target="form">
        <form action="/newsletter" method="POST" data-newsletter-target="emailForm" data-action="submit->newsletter#submitEmail">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="hidden" name="recipient" value="info@onelastai.com">
          
          <div class="form-container">
            <input 
              type="email" 
              name="email" 
              placeholder="Enter your email address..." 
              class="newsletter-input crystal-input" 
              data-newsletter-target="emailInput"
              required
            >
            <button type="submit" class="newsletter-button crystal-button-submit" data-newsletter-target="submitButton">
              <span data-newsletter-target="buttonText">Subscribe to Updates</span>
              <span data-newsletter-target="buttonSpinner" class="hidden">
                <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </span>
            </button>
          </div>
          
          <!-- Real-time Status Messages -->
          <div class="newsletter-status mt-4" data-newsletter-target="statusContainer">
            <div class="status-message hidden" data-newsletter-target="successMessage">
              <div class="flex items-center justify-center text-green-400 bg-green-900/20 rounded-lg p-4 border border-green-500/30">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>Successfully subscribed! Check your email for confirmation.</span>
              </div>
            </div>
            
            <div class="status-message hidden" data-newsletter-target="errorMessage">
              <div class="flex items-center justify-center text-red-400 bg-red-900/20 rounded-lg p-4 border border-red-500/30">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
                <span>Something went wrong. Please try again.</span>
              </div>
            </div>
          </div>
        </form>
        
        <div class="form-benefits mt-6">
          <div class="benefit-list flex flex-wrap justify-center gap-6 text-sm text-gray-400">
            <span>✓ Weekly AI insights</span>
            <span>✓ Early access to features</span>
            <span>✓ Exclusive discounts</span>
            <span>✓ No spam, unsubscribe anytime</span>
          </div>
        </div>
      </div>
      
      <div class="final-cta mt-12">
        <button class="final-cta-button crystal-button-ultimate">Begin Your AI Journey Now</button>
      </div>
    </div>
  </div>
  
  <!-- Seamless Border Transition to Stats Section -->
  <div class="newsletter-border-bottom absolute bottom-0 left-0 right-0 h-16"></div>
</section>
