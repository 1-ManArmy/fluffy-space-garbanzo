<!-- Core Features Section -->
<section class="relative overflow-hidden py-20 bg-gradient-to-br from-[#0a0a0f] via-[#1a1033] via-[#241845] to-[#0d0d18]">
  
  <!-- Dotted background -->
  <div class="absolute inset-0 opacity-20 z-0">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
      <defs>
        <pattern id="dotPattern" x="0" y="0" width="22" height="22" patternUnits="userSpaceOnUse">
          <circle cx="3" cy="3" r="2" fill="rgba(255,255,255,0.1)" />
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#dotPattern)" />
    </svg>
  </div>

  <!-- Neon arcs -->
  <div class="absolute top-1/3 left-0 w-full h-1/2 pointer-events-none z-0">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" fill="none">
      <path d="M0 150 Q 700 -100 1400 150" stroke="rgba(138,43,226,0.3)" stroke-width="2" />
      <path d="M0 200 Q 700 50 1400 200" stroke="rgba(0,255,170,0.25)" stroke-width="2" />
      <path d="M0 250 Q 700 100 1400 250" stroke="rgba(0,153,255,0.25)" stroke-width="2" />
    </svg>
  </div>

  <!-- Content -->
  <div class="relative z-20 container mx-auto px-6">
    <div class="text-center mb-14">
      <h2 class="text-4xl font-bold text-white">Core Features</h2>
      <p class="text-gray-400">Cutting-edge AI technology meets intuitive design</p>
    </div>

    <!-- Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      
      <!-- Card 1 - AI Tutor -->
      <div class="rounded-2xl bg-[#0a0a0f] shadow-2xl shadow-black/80 p-8 hover:shadow-[0_25px_50px_-12px_rgba(0,0,0,0.9)] hover:shadow-purple-900/30 transition-all duration-500 transform hover:-translate-y-1">
        <div class="w-12 h-12 flex items-center justify-center rounded-full bg-purple-600 text-white text-xl shadow-lg shadow-purple-600/30">📘</div>
        <h3 class="text-xl font-semibold text-white mt-4">AI Tutor</h3>
        <p class="text-gray-400 mt-2">Personalized learning companion that adapts to your pace and style.</p>
        <a href="<%= url_for('/learn') %>" class="text-blue-400 font-medium hover:underline mt-4 inline-block">Learn more →</a>
      </div>

      <!-- Card 2 - Interactive Projects -->
      <div class="rounded-2xl bg-[#0a0a0f] shadow-2xl shadow-black/80 p-8 hover:shadow-[0_25px_50px_-12px_rgba(0,0,0,0.9)] hover:shadow-purple-900/30 transition-all duration-500 transform hover:-translate-y-1">
        <div class="w-12 h-12 flex items-center justify-center rounded-full bg-purple-600 text-white text-xl shadow-lg shadow-purple-600/30">⚡</div>
        <h3 class="text-xl font-semibold text-white mt-4">Interactive Projects</h3>
        <p class="text-gray-400 mt-2">Hands-on coding experiences with real-time feedback and guidance.</p>
        <a href="<%= url_for('/learn/tutorials') %>" class="text-blue-400 font-medium hover:underline mt-4 inline-block">Learn more →</a>
      </div>

      <!-- Card 3 - Smart Tracking -->
      <div class="rounded-2xl bg-[#0a0a0f] shadow-2xl shadow-black/80 p-8 hover:shadow-[0_25px_50px_-12px_rgba(0,0,0,0.9)] hover:shadow-purple-900/30 transition-all duration-500 transform hover:-translate-y-1">
        <div class="w-12 h-12 flex items-center justify-center rounded-full bg-purple-600 text-white text-xl shadow-lg shadow-purple-600/30">📊</div>
        <h3 class="text-xl font-semibold text-white mt-4">Smart Tracking</h3>
        <p class="text-gray-400 mt-2">AI-powered analytics to monitor growth and optimize learning paths.</p>
        <a href="<%= url_for('/features/intelligence-analytics') %>" class="text-blue-400 font-medium hover:underline mt-4 inline-block">Learn more →</a>
      </div>

      <!-- Card 4 - Secure Platform -->
      <div class="rounded-2xl bg-[#0a0a0f] shadow-2xl shadow-black/80 p-8 hover:shadow-[0_25px_50px_-12px_rgba(0,0,0,0.9)] hover:shadow-purple-900/30 transition-all duration-500 transform hover:-translate-y-1">
        <div class="w-12 h-12 flex items-center justify-center rounded-full bg-purple-600 text-white text-xl shadow-lg shadow-purple-600/30">🛡️</div>
        <h3 class="text-xl font-semibold text-white mt-4">Secure Platform</h3>
        <p class="text-gray-400 mt-2">Enterprise-grade security with strict data protection compliance.</p>
        <a href="<%= url_for('/docs/auth') %>" class="text-blue-400 font-medium hover:underline mt-4 inline-block">Learn more →</a>
      </div>

      <!-- Card 5 - Global Access -->
      <div class="rounded-2xl bg-[#0a0a0f] shadow-2xl shadow-black/80 p-8 hover:shadow-[0_25px_50px_-12px_rgba(0,0,0,0.9)] hover:shadow-purple-900/30 transition-all duration-500 transform hover:-translate-y-1">
        <div class="w-12 h-12 flex items-center justify-center rounded-full bg-purple-600 text-white text-xl shadow-lg shadow-purple-600/30">🌐</div>
        <h3 class="text-xl font-semibold text-white mt-4">Global Access</h3>
        <p class="text-gray-400 mt-2">Available 24/7 across devices and regions without compromise.</p>
        <a href="<%= url_for('/docs/getting-started') %>" class="text-blue-400 font-medium hover:underline mt-4 inline-block">Learn more →</a>
      </div>

      <!-- Card 6 - API Integration -->
      <div class="rounded-2xl bg-[#0a0a0f] shadow-2xl shadow-black/80 p-8 hover:shadow-[0_25px_50px_-12px_rgba(0,0,0,0.9)] hover:shadow-purple-900/30 transition-all duration-500 transform hover:-translate-y-1">
        <div class="w-12 h-12 flex items-center justify-center rounded-full bg-purple-600 text-white text-xl shadow-lg shadow-purple-600/30">🔗</div>
        <h3 class="text-xl font-semibold text-white mt-4">API Integration</h3>
        <p class="text-gray-400 mt-2">Seamless integration with your existing tools and workflows.</p>
        <a href="<%= url_for('/docs/api') %>" class="text-blue-400 font-medium hover:underline mt-4 inline-block">Learn more →</a>
      </div>

    </div>
  </div>
</section>
